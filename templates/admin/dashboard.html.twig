{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Dashboard Administrateur</h1>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Gestion des Montres</h5>
                    <p class="card-text">Ajoutez, modifiez ou supprimez des montres de votre catalogue.</p>
                    <a href="{{ path('app_montre_index') }}" class="btn btn-primary">Gérer les Montres</a>
